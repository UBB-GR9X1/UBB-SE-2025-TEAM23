<Window x:Class="ISS_CreateStockPage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISS CreateStockPage">

    <Grid x:Name="RootGrid" Background="#A9A9A9" Padding="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Button Content="← GO BACK"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0"
                Padding="12,6"
                Background="Transparent"
                Foreground="Black"
                FontSize="14"
                BorderThickness="1"
                Click="GoBack_Click" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">

            <TextBlock Text="Create Your Own Stock"
                       FontSize="36"
                       FontFamily="Arial Black"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="Black"/>

            <TextBox x:Name="StockNameTextBox" PlaceholderText="Stock Name" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5" />

            <TextBox x:Name="StockQuantityTextBox" PlaceholderText="Stock Quantity" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5" />

            <TextBox x:Name="StockSymbolTextBox" PlaceholderText="Stock Symbol" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5" />

            <TextBox x:Name="AuthorCNPTextBox" PlaceholderText="Author CNP" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5" />

            <TextBox x:Name="StockPriceTextBox" PlaceholderText="Stock Price" Height="45" FontSize="16"
                     Background="#B0B0B0" Foreground="Black"
                     TextAlignment="Center" VerticalAlignment="Center"
                     CornerRadius="5" />

            <Button Content="Create Stock"
                    Width="180"
                    Height="45"
                    Background="Gray"
                    Foreground="Black"
                    FontSize="16"
                    FontWeight="Bold"
                    CornerRadius="5"
                    HorizontalAlignment="Center"
                    Click="CreateStock_Click" />

            <TextBlock x:Name="MessageTextBlock" Foreground="Green" FontSize="14"/>
        </StackPanel>

    </Grid>
</Window>