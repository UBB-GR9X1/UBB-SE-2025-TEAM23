<Window
    x:Class="StocksApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:StocksApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="10">
        <!-- Use a Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="LightSkyBlue" Offset="0.0" />
                <GradientStop Color="RoyalBlue" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- OR Use an Image as Background (uncomment the block below if preferred) -->
        <!--
        <Grid.Background>
            <ImageBrush ImageSource="Assets/BackgroundImage.jpg"/>
        </Grid.Background>
        -->

        <!-- Grid layout with Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Column Headers (Lower Bound swapped with Upper Bound) -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Stretch">
            <TextBlock Text="Name Alert" Width="150" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Lower Bound" Width="100" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Upper Bound" Width="100" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Toggle On/Off" Width="100" FontWeight="Bold" Margin="5"/>
        </StackPanel>

        <!-- ListView to display alerts -->
        <ListView x:Name="AlertsListView"
                  Grid.Row="2" Grid.Column="0"
                  SelectionMode="Single"
                  Margin="5">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!-- Editable Name Column -->
                        <TextBox Text="{Binding Name, Mode=TwoWay}" Width="150" Margin="5"/>

                        <!-- Editable Lower Bound Column with Validation (Moved Up) -->
                        <TextBox Text="{Binding LowerBound, Mode=TwoWay}" 
                                 Width="100" Margin="5" 
                                 TextChanged="LowerBound_TextChanged"/>

                        <!-- Editable Upper Bound Column with Validation (Moved Down) -->
                        <TextBox Text="{Binding UpperBound, Mode=TwoWay}" 
                                 Width="100" Margin="5" 
                                 TextChanged="UpperBound_TextChanged"/>

                        <!-- On/Off Toggle -->
                        <CheckBox IsChecked="{Binding ToggleOnOff, Mode=TwoWay}" Width="100" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Buttons for Create, Delete, Save, and Exit -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="10">
            <Button x:Name="PlusButton" Content="+" Click="PlusButton_Click" Margin="5"/>
            <Button x:Name="MinusButton" Content="-" Click="MinusButton_Click" Margin="5"/>
            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="5"/>
            <Button x:Name="ExitButton" Content="Back" Click="ExitButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
