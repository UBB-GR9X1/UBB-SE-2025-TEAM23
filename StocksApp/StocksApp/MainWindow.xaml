<Window
    x:Class="StocksApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:StocksApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="10">
        <!-- Use a Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="LightSkyBlue" Offset="0.0" />
                <GradientStop Color="RoyalBlue" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Grid layout with Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Column Headers (Lower Bound swapped with Upper Bound) -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Stretch">
            <TextBlock Text="Name Alert" Width="150" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Lower Bound" Width="100" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Upper Bound" Width="100" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Toggle On/Off" Width="100" FontWeight="Bold" Margin="5"/>
        </StackPanel>

        <!-- ListView to display alerts -->
        <ListView x:Name="AlertsListView"
                  Grid.Row="2" Grid.Column="0"
                  SelectionMode="Single"
                  Margin="5">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!-- Editable Name Column -->
                        <TextBox Text="{Binding Name, Mode=TwoWay}" Width="150" Margin="5"/>

                        <!-- Editable Lower Bound Column with Validation -->
                        <TextBox Text="{Binding LowerBound, Mode=TwoWay}" 
                                 Width="100" Margin="5" 
                                 TextChanged="LowerBound_TextChanged"/>

                        <!-- Editable Upper Bound Column with Validation -->
                        <TextBox Text="{Binding UpperBound, Mode=TwoWay}" 
                                 Width="100" Margin="5" 
                                 TextChanged="UpperBound_TextChanged"/>

                        <!-- On/Off Toggle -->
                        <CheckBox IsChecked="{Binding ToggleOnOff, Mode=TwoWay}" Width="100" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Button Controls for Plus/Minus/Save -->
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Top">
            <Button Content="Plus" Click="PlusButton_Click" Width="100" Margin="5"/>
            <Button Content="Minus" Click="MinusButton_Click" Width="100" Margin="5"/>
            <Button Content="Save" Click="SaveButton_Click" Width="100" Margin="5"/>
            <Button Content="Exit" Click="ExitButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
